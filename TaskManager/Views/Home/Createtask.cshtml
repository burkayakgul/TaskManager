<div class="container">
    <form>
      <div class="form-group">
        <label for="taskHeader">Header</label>
        <input type="text" class="form-control" id="taskHeader" aria-describedby="emailHelp" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="taskContent">Content</label>
        <textarea class="form-control" id="taskContent" rows="3"></textarea>
      </div>
      <div class="form-check">
        <input type="date" class="form-control" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>